mixin header-7-slide({ title })
  +col(['12', 'sm-6', 'lg-4']).slider-item
    .panel.p-120
      img.mb-30(src="img/pics/pic-70.svg", alt="")
      h2.mb-10= title
      a.arrow.b-500(href="") Read more
