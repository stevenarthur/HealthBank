.teams
  .team-userpics
    margin-left -10px
    margin-right -10px

    img
      margin 0 10px 10px

  .slider-full-three
    .slider-item
      max-width 380px

      +lg()
        opacity 0.3

      &.is-selected
        opacity 1

  .slider-nav
    background Light

    .flickity-viewport
      padding-top 8px
      top: -8px

    .slider-item
      line-height 140px

    .is-selected
      &::before
        content ''
        position absolute
        top -8px
        left 50%
        margin-left -8px
        width 0
        height 0
        border-style solid
        border-width 0 8px 8px 8px;
        border-color transparent transparent Light transparent;
