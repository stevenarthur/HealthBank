.prices
  .card-group
    +sm()
      > div
        &:first-child
          .card
            border-right none
            border-radius 4px 0 0 4px

        &:last-child
          .card
            border-left none
            border-radius 0 4px 4px 0

      &.card-group-line
        .card
          border-radius 0

  .faded-items
    div
      border-bottom 1px solid Light
      line-height 42px

    for num in 1 2 3 4 5
      div:nth-child({num})
        opacity 1.1 - num*0.1

  .value-bar
    display inline-block
    width auto
    height 8px
    background Accent
    border-radius 4px
    position absolute
    top 10px
    left 0
    z-index 4

  input[type=range]
    padding 0
    margin 0
    -webkit-appearance none
    width 100%
    background transparent
    z-index 2

    &:focus
      outline none

    &::-webkit-slider-thumb
      -webkit-appearance none
      width 20px
      height 20px
      position relative
      top -6px
      background Accent
      border none
      border-radius 50%
      cursor pointer

      &:focus
        outline none

    &::-webkit-slider-runnable-track
      width 100%
      height 8px
      border-radius 4px
      background Light

      &:focus
        outline none

    &::-ms-track
      background transparent
      border-color transparent
      color transparent
