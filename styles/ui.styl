.form-control
  font-family inherit
  font-size 16px
  line-height 20px
  padding 20px
  font-weight 400
  min-height 60px
  color Accent
  border none
  box-shadow none
  border-radius 4px
  display block
  width 100%
  outline none
  resize none

  &-light
    background Light

  &-white
    background White
    border 2px solid Light
    padding 18px

  &-small
    height 42px
    min-height 42px
    padding 11px 20px

  &::-webkit-input-placeholder
    color AccentOnWhite80
  &::-moz-placeholder
    color AccentOnWhite80
  &:-moz-placeholder
    color AccentOnWhite80
  &:-ms-input-placeholder
    color AccentOnWhite80

  &.icon-left
    padding-left 52px

  &.icon-right
    padding-right 52px

.btn
  background Accent
  font-family inherit
  display inline-block
  color #fff
  font-size 16px
  line-height 20px
  padding 20px 50px
  font-weight 500
  height 60px
  border none
  border-radius 4px
  text-align center

  &.btn-small
    padding 13px 30px
    line-height 1
    height auto

  &:hover
    background lighten(Accent, 10%)
    color #fff

  &.no-padding
    padding-left 0
    padding-right 0

.form-group
  .form-control
    border-radius 4px 0 0 4px

  .btn
    border-radius 0 4px 4px 0
    padding-left 0
    padding-right 0

.form-control-feedback
  position absolute
  top 15px
  right 9px
  opacity 0.4
  width 30px
  height 30px
  line-height 30px
  text-align center

.nav-tabs
  border none
  font-weight 500
  padding 0
  margin-left -2px
  margin-right -2px
  +sm()
    margin-left -7px
    margin-right -7px
  > li
  > li.active
    float none
    background transparent
    display inline-block
    margin 0 2px 10px
    +sm()
      margin 0 7px 10px

  > li > a
  > li > a:hover
  > li > a:focus
    display inline-block
    padding 0 25px
    height 42px
    line-height 38px
    border-radius 32px
    border 2px solid Light
    text-align center
    opacity 1
    cursor pointer

  > li.active > a
  > li.active > a:hover
  > li.active > a:focus
    border-radius 32px
    border 2px solid Accent
    text-align center
    opacity 1
    cursor pointer
    color AccentDark

  > li
    .badge-light
      margin 0 12px 0 -12px

.tabs-content
  > .tab-panel
    display none

  > .tab-panel.active
    display block

.navbar
  margin-left -15px
  margin-right -15px
  text-align center

  > a
  > .dropdown
    margin-left 15px
    margin-right 15px
    display inline-block

.badge-round
  width 32px
  height 32px
  border 2px solid Light
  background white
  border-radius 50%
  line-height 28px
  text-align center
  display inline-block

.badge-light
.badge-dark
  font-size 12px
  width 20px
  height 20px
  background Light
  color Accent
  border-radius 50%
  line-height 20px
  text-align center
  display inline-block
  font-weight 700
  vertical-align baseline

.badge-dark
  color white
  background Accent


.dropdown
  display inline-block
  > a
    display inline-block
    padding-right 14px
    &::after
      content ''
      position absolute
      right 0
      top 50%
      margin-top -5px
      width 6px
      height 11px
      background url('../img/icons/arrow-xs-right.svg') no-repeat
      transform rotate(90deg)

  &.open
    .dropdown-menu
      display block

.dropdown-menu
  z-index 3
  position absolute
  border 1px solid Light
  background white
  white-space nowrap
  min-width 100%
  border-radius 4px
  top 100%
  margin-top 10px
  overflow hidden
  padding 3px 0
  left 0
  right auto
  display none

  .dropdown-divider
    margin 3px 0
    border-top 1px solid Light

  a
    display block
    padding 3px 20px
    &:hover
      background Light

.dropdown-right
  .dropdown-menu
    right 0
    left auto

    +sm()
      left 0
      right auto
